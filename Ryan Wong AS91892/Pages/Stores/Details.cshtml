@page
@model Ryan_Wong_AS91892.Pages.Stores.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Store</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Store.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Store.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Store.Location)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Store.Location)
        </dd>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Staff</th>
                </tr>
                @foreach (var item in Model.Store.StaffAssignments)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Store.StoreID)
                        </td>

                    </tr>
                }
            </table>
        </dd>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Items</th>
                </tr>
                @foreach (var item in Model.Store.ItemAssignments)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Item.Name)
                        </td>

                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Store.StoreID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
